<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/noExpenseAdded_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/noexpense" 
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tapToAdd_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noExpenseAdded_TextView"
        android:layout_centerHorizontal="true"
        android:text="@string/tap_to_add" 
         android:visibility="visible"/>

    <TextView
        android:id="@+id/montlyAamount_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/month_textView"
        android:layout_alignBottom="@+id/month_textView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="58dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/month_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="37dp"
        android:text="TextView" />
   
</RelativeLayout>
